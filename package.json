{
  "name": "@icaf/root",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "pnpm --filter @icaf/frontend dev",
    "clean": "tsc -b --clean",
    "check": "tsc -b && pnpm --filter @icaf/frontend lint",
    "build": "pnpm run build:shared && pnpm --filter @icaf/frontend build",
    "build:shared": "pnpm --filter @icaf/shared build"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.3"
  }
}
