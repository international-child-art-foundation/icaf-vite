{
  "name": "@icaf/root",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "pnpm --filter @icaf/frontend dev",
    "build": "pnpm run build:shared && pnpm run build:backend && pnpm --filter @icaf/frontend build",
    "build:shared": "pnpm --filter @icaf/shared ts-node --project tsconfig.json",
    "build:backend": "pnpm --filter @icaf/backend tsc -b",
    "typecheck": "tsc --build --clean && tsc --build -v"
  },
  "devDependencies": {
    "typescript": "~5.7.2"
  }
}
